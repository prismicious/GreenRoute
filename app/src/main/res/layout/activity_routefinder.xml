<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#943B723D"
    android:orientation="vertical"
    tools:context=".Routefinder">

    <ImageView
        android:id="@+id/box"
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/square"
        app:srcCompat="@drawable/square" />

    <TextView
        android:id="@+id/iconA1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="53dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="208dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/icons"
        android:gravity="center"
        android:text="A"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:fontFamily="@font/roboto_bold"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="400dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:background="@drawable/button"
        android:layout_marginStart="52dp"
        android:onClick="testIntent"
        android:text="Find Route"
        android:textAllCaps="false"
        android:textColor="#FFFBFB"
         />

    <TextView
        android:id="@+id/iconA2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="53dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="248dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/icons"
        android:gravity="center"
        android:text="B"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:fontFamily="@font/roboto_bold" />

    <EditText
        android:id="@+id/routefinder_address2"
        android:layout_width="225dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/address_background"

        android:ems="10"
        android:hint=" Address, city"
        android:inputType="textPostalAddress"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="386dp" />

    <EditText
        android:id="@+id/routefinder_address"
        android:layout_width="225dp"
        android:layout_height="37dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/address_background"
        android:ems="10"
        android:hint=" Address, city"
        android:inputType="textPostalAddress" />

    <TextView
        android:id="@+id/routefinder_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="125dp"
        android:layout_marginTop="80dp"
        android:text="Routefinder"
        android:textSize="18sp"
        app:fontFamily="@font/roboto_bold"
        tools:layout_editor_absoluteX="68dp" />

    <TextView
        android:id="@+id/routefinder_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="120dp"
        android:text="Insert start and destination"
        android:textSize="18sp"
        app:fontFamily="@font/roboto_bold"
        tools:layout_editor_absoluteX="68dp" />


</RelativeLayout>